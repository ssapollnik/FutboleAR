@model IEnumerable<FutboleAR.Models.MatchModels>

@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
		var btnPartidoComleto=$('btnSumarme');
		btnPartidoComleto.text('Completo');
</script>

@foreach (var item in Model)
{
    <div class="d-flex flex-row flex-wrap">
        <div class="col-xs-12 col-sm-6 col-md-3 contenedor">
            <label-title>Partido @Html.DisplayFor(modelItem => item.ID)</label-title>
            <hr />
            <dl class="dl-horizontal">
                <dt>Lugar:
                <dt />
                <dd class="right">@Html.DisplayFor(modelItem => item.Cancha.Direccion)</dd>
                <img src="~/Content/img/barra.png" class="center" alt="barra">
                <dt>Fecha y hora:</dt>
                <dd class="right">@Html.DisplayFor(modelItem => item.FechaHora)</dd>
                <img src="~/Content/img/barra.png" class="center" alt="barra">
                <dt>Cantidad de jugadores:</dt>
                <dd class="right" id="capacity">8/10</dd>
                <img src="~/Content/img/barra.png" class="center" alt="barra">
                <div align=center><button type="button" id="sumarme" onclick="sumarse(@Html.DisplayFor(modelItem => item.ID))">Sumarme!</button></div>
            </dl>
        </div>
    </div>
}

<form method="post" action="">
    <input type="hidden" name="partidoID" value="3"/>
    <button type="submit">Enviar</button>
</form>
